find ./WEBSITE/a_htmlOrganizer/a_latest | sed '/emptyFile/ d' | sed '/\.html/ !d' | sed 's/^.*\///g' | sed 's/$/<\/loc><\/url>/g' > sitemapFileList;

echo -n > URLpaste;

for ((i=1; i<=$(wc -l < sitemapFileList); i++)) ; do
echo -n '<url><loc>' >> URLpaste;
head -1 ./WEBSITE/d_websiteURL/1_websiteURL.txt >> URLpaste;
done;

echo '<?xml version="1.0" encoding="UTF-8"?>' > ./WEBSITE/a_htmlOrganizer/c_outfiles/sitemap.xml;
echo '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">' >> ./WEBSITE/a_htmlOrganizer/c_outfiles/sitemap.xml;

paste -d '' URLpaste sitemapFileList >> ./WEBSITE/a_htmlOrganizer/c_outfiles/sitemap.xml;

echo '</urlset>' >> ./WEBSITE/a_htmlOrganizer/c_outfiles/sitemap.xml;

touch ./WEBSITE/a_htmlOrganizer/a_latest/emptyFile;
touch ./WEBSITE/a_htmlOrganizer/b_history/emptyFile;
touch ./WEBSITE/a_htmlOrganizer/c_outfiles/emptyFile;

rm URLpaste sitemapFileList;
